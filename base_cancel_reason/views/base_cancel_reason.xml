<openerp>
<data>

<record id="base_cancel_reason_view_tree" model="ir.ui.view">
    <field name="name">base.cancel.reason.tree</field>
    <field name="model">base.cancel.reason</field>
    <field name="arch" type="xml">
        <tree>
            <field name="name"/>
            <field name="active"/>
        </tree>
    </field>
</record>

<record id="base_cance_reason_view_form" model="ir.ui.view">
    <field name="name">base.cancel.reason.form</field>
    <field name="model">base.cancel.reason</field>
    <field name="arch" type="xml">
        <form string="Cancel Reason">
            <sheet>
                <group name="group_1" col="2" colspan="2">
                    <field name="id" invisible="1"/>
                    <field name="name"/>
                    <field name="active"/>
                </group>
                <notebook>
                    <page string="Notes">
                        <field name="description"/>
                    </page>
                </notebook>
            </sheet>
        </form>
    </field>
</record>

<record id="base_cancel_reason_action" model="ir.actions.act_window">
    <field name="name">Cancel Reason</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">base.cancel.reason</field>
    <field name="view_type">form</field>
    <field name="view_mode">tree,form</field>
    <field name="help" type="html">
        <p class="oe_view_nocontent_create">
        Click to add a Cancellation Reason.
        </p>
    </field>
</record>

<menuitem 
    name="Cancel Reason"
    id="menu_cancel_reason"
    parent="base.menu_administration"/>

<menuitem
    name="Cancel Reason"
    id="cancel_reason_menu"
    action="base_cancel_reason_action"
    parent="menu_cancel_reason"
    sequence="1"/>

</data>
</openerp>
