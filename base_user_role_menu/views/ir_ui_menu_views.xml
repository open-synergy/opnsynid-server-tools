<openerp>
<data>

<record id="ir_ui_menu_view_form" model="ir.ui.view">
    <field name="name">ir.ui.menu form</field>
    <field name="model">ir.ui.menu</field>
    <field name="inherit_id" ref="base.edit_menu_access"/>
    <field name="arch" type="xml">
        <data>
            <xpath expr="//field[@name='groups_id']" position="attributes">
                <attribute name="widget">many2many_checkboxes</attribute>
                <attribute name="domain">[('category_id','=',%(base_user_role.ir_module_category_role)d)]</attribute>
            </xpath>
        </data>
    </field>
</record>

<record id="ir_ui_menu_view_list" model="ir.ui.view">
    <field name="name">ir.ui.menu list</field>
    <field name="model">ir.ui.menu</field>
    <field name="field_parent">child_id</field>
    <field name="arch" type="xml">
        <tree>
            <field name="name"/>
            <field name="parent_id" invisible="1"/>
        </tree>
    </field>
</record>

<record id="ir_ui_menu_list_action" model="ir.actions.act_window">
    <field name="name">Menu Structures</field>
    <field name="res_model">ir.ui.menu</field>
    <field name="view_type">tree</field>
    <field name="view_id" ref="ir_ui_menu_view_list"/>
    <field name="domain">[('parent_id','=',False)]</field>
</record>

<menuitem
    id="ir_ui_menu_list_menu"
    string="Menu Structures"
    action="ir_ui_menu_list_action"
    parent="base.next_id_2"
/>

<act_window
    id="ir_ui_menu_list_by_parent"
    name="Menu"
    domain="[('id','child_of',active_id)]"
    res_model="ir.ui.menu"
    src_model="ir.ui.menu"
    key2="tree_but_open"/>

</data>
</openerp>
